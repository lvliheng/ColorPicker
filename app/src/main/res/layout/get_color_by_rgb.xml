<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/result"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/color_value"
            android:textColor="#000000" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/red_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/color_name"
        android:textSize="18sp"
        android:textColor="@color/red" />

    <SeekBar
        android:id="@+id/red_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:max="255"
        android:maxHeight="3dip"
        android:minHeight="3dip"
        android:progressDrawable="@drawable/red_progress"
        android:thumb="@drawable/red_thumb_drawable" />

    <TextView
        android:id="@+id/green_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/color_name"
        android:textSize="18sp"
        android:textColor="@color/green" />

    <SeekBar
        android:id="@+id/green_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:max="255"
        android:maxHeight="3dip"
        android:minHeight="3dip"
        android:progressDrawable="@drawable/green_progress"
        android:thumb="@drawable/green_thumb_drawable" />

    <TextView
        android:id="@+id/blue_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/color_name"
        android:textSize="18sp"
        android:textColor="@color/blue" />

    <SeekBar
        android:id="@+id/blue_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:max="255"
        android:maxHeight="3dip"
        android:minHeight="3dip"
        android:progressDrawable="@drawable/blue_progress"
        android:thumb="@drawable/blue_thumb_drawable" />

    <TextView
        android:id="@+id/password_tv"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/grey"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_height="wrap_content" />

</LinearLayout>